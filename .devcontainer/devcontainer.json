// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
    "name": "Ubuntu",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {},
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/jsburckhardt/devcontainer-features/opencode:1": {}
    },
    "remoteUser": "vscode",
    "mounts": [
        {
            "source": "${localEnv:HOME}/.local/share/opencode/auth.json",
            "target": "/home/vscode/.local/share/opencode/auth.json",
            "type": "bind"
        },
        // persist vibe-kanban state after docker rebuild
        {
            "source": "${localWorkspaceFolder}/.vibe-kanban/config",
            "target": "/home/vscode/.local/share/vibe-kanban",
            "type": "bind"
        },
        {
            "source": "${localWorkspaceFolder}/.vibe-kanban/worktrees",
            "target": "/var/tmp/vibe-kanban/worktrees",
            "type": "bind"
        }
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "bloop.vibe-kanban",
                "bierner.markdown-mermaid",
                "bradlc.vscode-tailwindcss",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        // vite dev
        5173,
        // vite preview
        4173,
        // storybook
        6006
    ],
    "postCreateCommand": "bash -c 'pnpm exec playwright install --with-deps'"
}