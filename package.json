{
    "name": "planit",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev-state": "VITE_DEV_STATE=on vite",
        "dev:emulator": "VITE_FIREBASE_EMULATOR=on VITE_FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099 VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "eslint": "eslint",
        "format": "prettier --write '{src,tests,.}/*.{ts,js,html}'",
        "lint": "eslint --fix && prettier --write '{src,tests,.}/*.{ts,js,html}'",
        "lint:check": "eslint --max-warnings=0 && prettier --check '{src,tests,.}/*.{ts,js,html}'",
        "storybook": "storybook dev -p 6006 --no-open",
        "build-storybook": "storybook build",
        "unittest": "vitest run --passWithNoTests",
        "integtest:profile": "firebase emulators:exec --project demo-planit --only auth \"node scripts/seed-firebase-emulator.mjs && VITE_FIREBASE_EMULATOR=on VITE_FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099 VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 playwright test ${PW_PROFILE:+--project=$PW_PROFILE}\"",
        "integtest": "pnpm run integtest:profile",
        "integtest:desktop": "PW_PROFILE=desktop-chrome-light pnpm run integtest:profile",
        "integtest:mobile": "PW_PROFILE=mobile-chrome-dark pnpm run integtest:profile",
        "integtest:video": "firebase emulators:exec --project demo-planit --only auth \"node scripts/seed-firebase-emulator.mjs && PW_VIDEO=on VITE_FIREBASE_EMULATOR=on VITE_FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099 VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 playwright test\"",
        "demo:ftux": "firebase emulators:exec --project demo-planit --only auth \"node scripts/seed-firebase-emulator.mjs && PW_DEMO=on PW_VIDEO=on PW_SLOWMO=275 PW_DEMO_TIME_SCALE=0.5 VITE_FIREBASE_EMULATOR=on VITE_FIREBASE_AUTH_EMULATOR_HOST=127.0.0.1:9099 VITE_FIREBASE_FIRESTORE_EMULATOR_HOST=127.0.0.1:8080 playwright test tests/user-flows/first-time-user-experience.spec.ts\"",
        "pw:codegen": "playwright codegen http://localhost:5173",
        "optimize:videos": "node scripts/optimize-playwright-videos.mjs",
        "emulator:start": "firebase emulators:start --project demo-planit --only auth",
        "emulator:start:all": "firebase emulators:start --project demo-planit --only auth,firestore",
        "emulator:seed": "node scripts/seed-firebase-emulator.mjs",
        "test": "pnpm run unittest && pnpm run integtest",
        "lhci:ci": "node scripts/run-lhci.mjs collect",
        "data:course": "mkdir -p public/_data && node scripts/generateCourseData.mjs 10000 > public/_data/courseData.json",
        "data:catalogs:raw": "node scripts/generateCatalogsRaw.mjs",
        "data:catalogs:static": "node scripts/generateCatalogsStatic.mjs",
        "data:requirements": "node scripts/generateRequirementsData.mjs",
        "data:manifest": "node scripts/generateCatalogsManifest.js",
        "data:generate": "pnpm run data:course && pnpm run data:catalogs:raw && pnpm run data:catalogs:static && pnpm run data:requirements && pnpm run data:manifest",
        "vibe": "PORT=9999 vibe-kanban",
        "fix-webp-asset": "pnpx sharp-cli -i"
    },
    "devDependencies": {
        "@eslint/css": "^0.14.1",
        "@eslint/js": "^10.0.1",
        "@eslint/markdown": "^7.5.1",
        "@html-eslint/eslint-plugin": "^0.54.2",
        "@html-eslint/parser": "^0.54.0",
        "@lhci/cli": "^0.15.1",
        "@playwright/test": "^1.58.2",
        "@storybook/addon-a11y": "^8.6.14",
        "@storybook/addon-essentials": "^8.6.14",
        "@storybook/addon-interactions": "^8.6.14",
        "@storybook/addon-links": "^8.6.14",
        "@storybook/html": "^8.6.14",
        "@storybook/html-vite": "^8.6.14",
        "@tailwindcss/node": "^4.1.18",
        "@tailwindcss/vite": "^4.1.18",
        "@types/node": "^25.2.2",
        "@vite-pwa/assets-generator": "^1.0.2",
        "eslint": "^9.39.2",
        "eslint-plugin-better-tailwindcss": "^4.1.1",
        "firebase": "^12.9.0",
        "firebase-tools": "^15.6.0",
        "globals": "^17.3.0",
        "jsdom": "^28.0.0",
        "prettier": "3.8.1",
        "prettier-plugin-tailwindcss": "^0.7.2",
        "sharp": "^0.33.5",
        "storybook": "^8.6.14",
        "tailwindcss": "^4.1.18",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.55.0",
        "vibe-kanban": "0.1.12",
        "vite": "^7.1.9",
        "vite-imagetools": "^9.0.3",
        "vite-plugin-pwa": "^1.1.0",
        "vitest": "^3.2.4",
        "workbox-window": "^7.4.0"
    }
}
